<Window x:Class="QuizTime.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuizTime"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Welcome to my Quiz!" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="36" FontWeight="Bold" Foreground="Black"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            
            <Button Content="Start Quiz" Width="180" Height="60" Margin="20" FontSize="16" FontWeight="Bold" Background="Green" Foreground="White" BorderThickness="0" Click="StartQuiz_Click"/>
            <Button Content="Edit Quiz" Width="180" Height="60" Margin="20" FontSize="16" FontWeight="Bold" Background="Blue" Foreground="White" BorderThickness="0" Click="EditQuiz_Click"/>

        </StackPanel>
        <ContentControl x:Name="contentControl" Grid.Row="1" Visibility="Collapsed"/>
    </Grid>
</Window>
        


